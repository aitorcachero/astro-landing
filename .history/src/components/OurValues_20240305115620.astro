---
import { values } from '../helpers/const.js';
---

<section
  class="lg:w-full flex flex-col justify-center items-center p-4 lg:p-20 gap-10"
  style={{ backgroundColor: '#D7E0E5' }}
>
  <h2 class="text-2xl font-bold" style={{ color: '#2E5172' }}>Our Values</h2>
  <main
    class="w-full lg:w-[1200px] grid lg:grid-cols-3 text-white gap-10 lg:gap-0"
  >
    {
      values.map((value, i) => {
        return (
          <article class="flex flex-col h-[310px]">
            <main
              style={{ backgroundColor: value.bgColor }}
              class="h-1/2 w-full flex flex-col justify-center items-start gap-4 px-10"
            >
              <h2 class="text-3xl font-semibold">{value.title}</h2>
              <p>{value.text}</p>
            </main>
            <div class="h-1/2 w-full">
              <img src={value.img} class="w-full h-full" />
            </div>
          </article>
        );
      })
    }
  </main>
</section>
