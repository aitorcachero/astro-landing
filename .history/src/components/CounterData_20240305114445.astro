          <span
            class="flex tabular-nums text-white text-6xl text-center font-extrabold transition-[_--num] duration-[3s] ease-out [counter-set:_num_var(--num)] supports-[counter-set]:before:content-[counter(num)]"
            x-data="{ shown: false }"
            x-intersect="shown = true"
            :class="shown && '[--num:4500]'"
          >
            <span class="supports-[counter-set]:sr-only text-white">+4,500</span
            >
          </span>
          <span
            class="inline-flex font-semibold bg-clip-text text-transparent text-center bg-gradient-to-r from-indigo-500 to-indigo-300 mb-2"
