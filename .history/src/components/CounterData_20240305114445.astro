            class="flex tabular-nums text-white text-6xl text-center font-extrabold mb-2 transition-[_--num] duration-[3s] ease-out [counter-set:_num_var(--num)] supports-[counter-set]:before:content-[counter(num)]"
            x-data="{ shown: false }"
            x-intersect="shown = true"
            :class="shown && '[--num:500]'"
