---
import { SECTIONS } from '../helpers/const.js';
const logo = '/awwg.svg';
---

<nav
  class="w-screen fixed h-24 flex flex-row top-0 justify-around items-center z-50 bg-white shadow-[0px_0px_0px_1px_rgba(0,0,0,0.06),0px_1px_1px_-0.5px_rgba(0,0,0,0.06),0px_3px_3px_-1.5px_rgba(0,0,0,0.06),_0px_6px_6px_-3px_rgba(0,0,0,0.06),0px_12px_12px_-6px_rgba(0,0,0,0.06),0px_24px_24px_-12px_rgba(0,0,0,0.06)]"
>
  <a href="/" class="w-10 lg:w-20">
    <img
      src={logo}
      alt="Imagen de la empresa AWWG"
      class="lg:h-full h-10 lg:p-3 px-2 aspect-auto"
    />
  </a>
  <ul class="flex flex-row gap-4 lg:gap-10 mr-6 lg:mr-0">
    {
      SECTIONS.map((item) => {
        return (
          <li>
            <a href={item.url}>
              <p class="text-xs lg:text-lg text-blue-900 hover:underline lg:font-semibold gap-4">
                {item.name}
              </p>
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
