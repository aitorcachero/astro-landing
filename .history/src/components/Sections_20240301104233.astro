---
import {sections} from '../helpers/const.js'
import { Image } from 'astro:assets';
---

<section class="w-full min-h-auto-[480px] flex flex-col flex-1 lg:flex-row justify-center items-center gap-4 py-10 bg-white">
  {sections.map(section => {
    return (
    <article class="w-[480px] h-[640px] relative overflow-hidden hover:cursor-pointer">
      <Image src={section.img}  />
      <p class="absolute text-3xl font-extrabold text-white text-center" style={{top: '50%', left:'50%', transform: 'translate(-50%, -50%)'}}>{section.name}</p>

    </article>
    )
  })}

</section>


