---
import {sections} from '../helpers/const.js'
---

<section class="w-full min-h-auto-[480px] flex flex-col lg:flex-row justify-center items-center gap-10 p-10">
  {sections.map(section => {
    return (
    <article class="w-[480px] h-[480px] border relative">
      <img src={section.img} class="w-full h-full"/>
      <p class=" top-1/2  text-2xl text-white text-center">{section.name}</p>

    </article>
    )
  })}

</section>


