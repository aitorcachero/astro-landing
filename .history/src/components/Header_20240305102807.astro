---
const { img } = Astro.props;
const { text } = Astro.props;
---

<header
  class="w-full lg:h-[425px] overflow-hidden mt-24 flex justify-center items-center relative"
>
  <img src={img} class="object-cover h-64 lg:h-full lg:w-full" />
  <p
    class="absolute text-6xl font-extrabold text-white text-center"
    style={{
      top: '50%',
      left: '50%',
      transform: 'translate(-50%, -50%)',
    }}
  >
    {text}
  </p>
</header>
