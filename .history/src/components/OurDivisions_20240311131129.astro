---
import { DIVISIONS } from '../helpers/const.js';
import Button from './Button.astro';
---

<h1 class="text-3xl font-bold text-center" style={{ color: '#305374' }}>
  Our divisions
</h1>
<section
  class="flex flex-col lg:flex-row justify-center items-center gap-10 lg:gap-20 my-20"
>
  {
    DIVISIONS.map((division) => {
      return (
        <article class="flex flex-col justify-center items-center w-full lg:w-[370px] h-[580px] relative">
          <img
            src={division.img}
            class="w-full p-4 lg:p-0 lg:w-[370px] h-[580px]"
          />
          <div class="absolute flex flex-col w-full lg:w-[370px] h-[580px] justify-around items-center gap-48">
            <h2 class="text-white text-3xl font-bold lg:w-[200px] text-center">
              {division.title}
            </h2>
            <a href={division.url}>
              <Button text="Find more" />
            </a>
          </div>
        </article>
      );
    })
  }
</section>
