---
import { COUNTER_DATA } from '../helpers/const.js';
import ArticleCounter from './ArticleCounter.astro';
---

<div
  class="flex justify-center items-center p-48"
  style={{ backgroundColor: '#2E5172' }}
>
  <div class="flex">
    <section class="grid gap-12 lg:grid-cols-4 lg:gap-16">
      {
        COUNTER_DATA.map((section) => {
          return <ArticleCounter data={section} />;
        })
      }
    </section>
  </div>
</div>

<style>
  @property --num {
    syntax: '<integer>';
    initial-value: 0;
    inherits: false;
  }
  @keyframes counter {
    from {
      --num: 0;
    }
    to {
      --num: 40;
    }
  }
</style>
